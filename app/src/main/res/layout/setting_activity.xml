<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="基本设置"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/gps_select"
                android:background="?android:attr/selectableItemBackground"
                >

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/switchwidget"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:padding="16dp"
                    android:text="GPS 定位"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:clickable="false"
                    android:focusable="false"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/darker_gray"
                    >

                </FrameLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/animation_select"
                android:background="?android:attr/selectableItemBackground"
                >


                <android.support.v7.widget.AppCompatCheckedTextView
                    android:id="@+id/checkbox_multiple"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="显示天气动画"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:clickable="false"
                    android:focusable="false"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/darker_gray"
                    >

                </FrameLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:id="@+id/auto_update"
                android:background="?android:attr/selectableItemBackground"
                >


                <android.support.v7.widget.AppCompatCheckedTextView
                    android:id="@+id/checkbox_single"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:checkMark="?android:attr/listChoiceIndicatorSingle"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:text="自动更新天气"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:clickable="false"
                    android:focusable="false"
                    />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/darker_gray"
                    >

                </FrameLayout>


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center_vertical"
                android:text="其他设置"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead.Inverse"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                />

            <RelativeLayout
                android:id="@+id/choose_theme"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackground"
                >

                <ImageView
                    android:id="@+id/imageViewPhone3"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:padding="-6dp"
                    android:src="@mipmap/ic_hardware_phone_android_3"
                    android:tint="?attr/colorPrimary" />

                <ImageView
                    android:id="@+id/imageViewPhone2"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:padding="-6dp"
                    android:src="@mipmap/ic_hardware_phone_android_2"
                    android:tint="?attr/colorAccent" />

                <ImageView
                    android:id="@+id/imageViewPhone"
                    android:layout_width="24dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:padding="-6dp"
                    android:src="@mipmap/ic_hardware_phone_android"
                    android:tint="?attr/colorPrimary" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="64dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="改变主题"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="点击此处更改主题,可以选择夜间主题保护眼睛哦"
                        android:textSize="14sp"
                        android:textColor="@color/colorGrey"
                        />


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/darker_gray"
                    >

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/update"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginLeft="16dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_launcher"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:tint="@color/colorPrimary"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="64dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="检查更新"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="当前版本:V1.0"
                        android:textSize="14sp"
                        android:textColor="@color/colorGrey"
                        />


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/darker_gray"
                    >

                </FrameLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginLeft="16dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_share_more"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:tint="?attr/colorPrimary"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="64dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="分享给好友"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="试一下，说不定有惊喜哦"
                        android:textSize="14sp"
                        android:textColor="@color/colorGrey"
                        />


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/darker_gray"
                    >

                </FrameLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/great"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginLeft="16dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_action_design"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:tint="@color/colorPrimary"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="64dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="点评"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="给个好评哦，亲"
                        android:textSize="14sp"
                        android:textColor="@color/colorGrey"
                        />


                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contribute"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginLeft="16dp"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_wx_logo"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:tint="?attr/colorPrimary"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="64dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    >


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="觉得不错吗？"
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:text="随意打赏！"
                        android:textSize="14sp"
                        android:textColor="@color/colorGrey"
                        />


                </LinearLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="8dp"
                    android:background="@android:color/darker_gray"
                    >

                </FrameLayout>


            </RelativeLayout>



        </LinearLayout>

    </ScrollView>



</LinearLayout>